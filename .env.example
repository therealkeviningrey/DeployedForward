# Database
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
POSTGRES_PRISMA_URL=postgresql://user:password@host:5432/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://user:password@host:5432/database?sslmode=require

# Authentication
AUTH_PROVIDER=better-auth
NEXT_PUBLIC_AUTH_PROVIDER=better-auth
BETTER_AUTH_SECRET=your-secret-key-here-min-32-chars
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OAuth Providers (optional)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GITHUB_OAUTH_CLIENT_ID=your-github-client-id
GITHUB_OAUTH_CLIENT_SECRET=your-github-client-secret

# Admin Configuration
ADMIN_EMAILS=admin@example.com,another-admin@example.com
REQUIRE_ADMIN_2FA=false

# Stripe (use test keys for development)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs
STRIPE_OPERATOR_MONTHLY_PRICE_ID=price_xxxxxxxxxxxxx
STRIPE_OPERATOR_ANNUAL_PRICE_ID=price_xxxxxxxxxxxxx
STRIPE_UNIT_MONTHLY_PRICE_ID=price_xxxxxxxxxxxxx
STRIPE_UNIT_ANNUAL_PRICE_ID=price_xxxxxxxxxxxxx
STRIPE_BATTALION_MONTHLY_PRICE_ID=price_xxxxxxxxxxxxx
STRIPE_BATTALION_ANNUAL_PRICE_ID=price_xxxxxxxxxxxxx

# Email Service
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry (optional)
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development
